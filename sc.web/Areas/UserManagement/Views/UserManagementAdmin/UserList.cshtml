
@{
    ViewBag.Title = "User Management";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

<!-- Bread crumb -->
<div class="row page-titles">
    <div class="col-md-4 align-self-center">
        <h3 class="text-primary">User Management</h3>
    </div>
    <div class="col-md-7 align-self-center">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Admin/UserManagement">User Management</a></li>
            <li class="breadcrumb-item active">User List</li>
        </ol>
    </div>
</div>
<!-- End Bread crumb -->



<div class="container-fluid fadeIn" id="data-form">
    <h4>User Form</h4>
    <form id="userForm">
        <input type="hidden" id="hdnId" value="0" />

        <table class="table">

            <tr class="row">
                <th class="col-md-2">
                    <label class="control-label">Username *</label>
                </th>
                <td class="col-md-4">
                    <input type="text" id="txtUsername" name="txtUsername" class="form-control" placeholder="Username" disabled="disabled" readonly="readonly" />
                </td>
            </tr>

            <tr class="row">
                <th class="col-md-2">
                    <label class="control-label">First Name *</label>
                </th>
                <td class="col-md-4">
                    <input type="text" id="txtFirstName" name="txtFirstName" class="form-control" placeholder="First Name" />
                </td>
            </tr>

            <tr class="row">
                <th class="col-md-2">
                    <label class="control-label">Last Name *</label>
                </th>
                <td class="col-md-4">
                    <input type="text" id="txtLastName" name="txtLastName" class="form-control" placeholder="Last Name" />
                </td>
            </tr>

            <tr class="row">
                <th class="col-md-2">
                    <label class="control-label">Email *</label>
                </th>
                <td class="col-md-4">
                    <input type="text" id="txtEmail" name="txtEmail" class="form-control" placeholder="Email" />
                </td>
            </tr>

            <tr class="row">
                <th class="col-md-2">
                    <label class="control-label">Phone No.</label>
                </th>
                <td class="col-md-4">
                    <input type="text" id="txtPhoneNo" name="txtPhoneNo" class="form-control" placeholder="Phone No." />
                </td>
            </tr>

            <tr class="row" id="trNewPasswordEdit">
                <th class="col-md-2">
                    <label class="control-label">New Password</label>
                </th>
                <td class="col-md-4">
                    <input type="password" id="txtNewPasswordEdit" name="txtNewPasswordEdit" class="form-control" placeholder="New Password" />
                </td>
            </tr>

            <tr class="row" id="trConfirmPasswordEdit">
                <th class="col-md-2">
                    <label class="control-label">Confirm Password</label>
                </th>
                <td class="col-md-4">
                    <input type="password" id="txtConfirmPasswordEdit" name="txtConfirmPasswordEdit" class="form-control" placeholder="Confirm Password" />
                </td>
            </tr>

            <tr class="row" id="trNewPasswordAdd">
                <th class="col-md-2">
                    <label class="control-label">New Password *</label>
                </th>
                <td class="col-md-4">
                    <input type="password" id="txtNewPasswordAdd" name="txtNewPasswordAdd" class="form-control" placeholder="New Password" />
                </td>
            </tr>

            <tr class="row" id="trConfirmPasswordAdd">
                <th class="col-md-2">
                    <label class="control-label">Confirm Password *</label>
                </th>
                <td class="col-md-4">
                    <input type="password" id="txtConfirmPasswordAdd" name="txtConfirmPasswordAdd" class="form-control" placeholder="Confirm Password" />
                </td>
            </tr>

            <tr class="row">
                <td class="col-md-2"></td>
                <td class="col-md-4">
                    <button type="button" class="btn btn-primary" id="btnSave">Save</button>
                    <button type="button" class="btn btn-primary" id="btnUpdate">Update</button>
                    <button type="button" class="btn btn-warning" id="btnCancel">Cancel</button>
                    <button type="button" class="btn btn-default" id="btnReset">Reset</button>
                </td>
            </tr>
        </table>
    </form>
</div>

@Html.Partial("_AddButtonPartial")

<div class="container-fluid" id="data-container">

    <h4>User List</h4>
    <div id="divData"></div>
    <div id="divPager" style="display: none"></div>
</div>

<script type="text/javascript" src="~/Areas/UserManagement/Scripts/UserManagementAdmin.js"></script>
