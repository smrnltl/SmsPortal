
@{
    ViewBag.Title = "Portal";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

<!-- Bread crumb -->
<div class="row page-titles">
    <div class="col-md-4 align-self-center">
        <h3 class="text-primary">Portal</h3>
    </div>
    <div class="col-md-7 align-self-center">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Admin/Portal">Portal</a></li>
            <li class="breadcrumb-item active">Portal List</li>
        </ol>
    </div>
</div>
<!-- End Bread crumb -->

<div class="container-fluid" id="search-filter">
    <!-- Start Page Content -->
    <h4>Search Filter</h4>

    <div class="row">
        <div class="col-md-3">
            <select class="form-control" id="ddlGroupFilter" name="ddlGroup">
                <option value="-1">Select Group</option>
                <option value="0">Individual</option>
            </select>
        </div>

        <div class="col-md-3">
            <input type="text" id="txtPersonNameFilter" name="txtPersonNameFilter" class="form-control" placeholder="Person Name" />
        </div>

        <div class="col-md-3">
            <input type="text" id="txtMobileFilter" name="txtMobileFilter" class="form-control" placeholder="Mobile" />
        </div>

        <div class="col-md-3">
            <select class="form-control" id="ddlSentFilter">
                <option value="2">Message Status</option>
                <option value="1">Sent</option>
                <option value="0">Not Sent</option>
            </select>
        </div>
    </div>

    <div class="row">
        
        <div class="col-md-3">
            <button type="button" class="btn btn-primary" id="btnSearch">Search</button>
            <button type="button" class="btn btn-default" id="btnResetFilter">Reset</button>
        </div>

    </div>
</div>

<div class="container-fluid fadeIn" id="data-form">
    <h4>Portal Form</h4>
    <form id="portalForm">
        <input type="hidden" id="hdnId" value="0" />

        <table class="table">
            <tr class="row">
                <th class="col-md-2">
                    <label class="control-label">Message Type *</label>
                </th>
                <td class="col-md-4">
                    <select class="form-control" id="ddlMessageType" name="ddlMessageType" disabled="disabled">
                        <option value="">Select Message Type</option>
                    </select>
                </td>
            </tr>

            <tr class="row">
                <th class="col-md-2">
                    <label class="control-label">Message Gateway *</label>
                </th>
                <td class="col-md-4">
                    <select class="form-control" id="ddlMessageGateway" name="ddlMessageGateway">
                        <option value="">Select Message Gateway</option>
                    </select>
                </td>
            </tr>

            <tr class="row">
                <th class="col-md-2">
                    <label class="control-label">Group</label>
                </th>
                <td class="col-md-4">
                    <select class="form-control" id="ddlGroup" name="ddlGroup">
                        <option value="0">Select Group</option>
                    </select>
                </td>
            </tr>

            <tr class="row">
                <th class="col-md-2">
                    <label class="control-label">Persons *</label>
                </th>
                <td class="col-md-4">
                    <select class="form-control" id="ddlPerson" name="ddlPerson" multiple="multiple">
                        @*<option value="">Select Persons</option>*@
                    </select>
                </td>
            </tr>

            <tr class="row">
                <th class="col-md-2">
                    <label class="control-label">Message Template</label>
                </th>
                <td class="col-md-4">
                    <select class="form-control" id="ddlMessageTemplate" name="ddlMessageTemplate">
                        <option value="">Select Message Template</option>
                    </select>
                </td>
            </tr>

            <tr class="row">
                <th class="col-md-2">
                    <label class="control-label">Message *</label>
                    <br />
                    <small>(Maximum 160 characters)</small>
                </th>
                <td class="col-md-4">
                    <textarea id="txtMessage" name="txtMessage" rows="8" class="form-control" maxlength="160"></textarea>
                </td>
            </tr>

            <tr class="row">
                <td class="col-md-2"></td>
                <td class="col-md-4">
                    <button type="button" class="btn btn-primary" id="btnSave">Send</button>
                    <button type="button" class="btn btn-warning" id="btnCancel">Cancel</button>
                    <button type="button" class="btn btn-default" id="btnReset">Reset</button>
                </td>
            </tr>
        </table>
    </form>
</div>

<div class="add-panel">
    <button type="button" class="bttn-dark bttn-first-button" id="btnSendMsg">Send Message</button>
</div>
<div class="container-fluid" id="data-container">

    <h4 id="listName">Message List</h4>
    <div id="divData"></div>
    <div id="divPager" style="display: none"></div>
</div>

<script type="text/javascript" src="~/Areas/Portal/Scripts/PortalAdmin.js"></script>
